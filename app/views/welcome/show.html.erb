<%= form_with url: "/login", method: :post do |form| %>
  <%= form.label :email, "Email:"%>
  <%= form.text_field :email %>
  <%= form.label :password, "Password:" %>
  <%= form.password_field :password %>
  <%= form.submit "Login" %> 
<% end %>

<%= button_to "Login with Google", "/auth/google_oauth2", method: :get, data: { turbo: false }%>
<%= button_to "Login with Kroger", "https://api.kroger.com/v1/connect/oauth2/authorize", method: :get, data: { turbo: false }, params: { scope: "product.compact&scope=profile.compact"], ["scope", "cart.basic:write"]]),
client_id: ENV['KROGER_CLIENT_ID'], response_type: "code", redirect_uri: ENV['KROGER_REDIRECT_URL'] } %>

<p>Don't have an account? <%= link_to "Register Here", "/register" %> </p>

<p><%= link_to  "Do you or someone you know need help?" %></p>

<iframe
  width="600"
  height="450"
  style="border:0"
  loading="lazy"
  allowfullscreen
  referrerpolicy="no-referrer-when-downgrade"
  src="https://www.google.com/maps/embed/v1/search?key=<%= ENV['GOOGLE_MAPS_API_KEY'] %>&region=US&zoom=12&q=women+shelters,near+<%= @location %>">
</iframe>