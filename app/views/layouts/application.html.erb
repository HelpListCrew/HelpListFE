<!DOCTYPE html>
<html>
  <head>
     
    </div>
    <title>HelpListFE</title>

      <h1>
        HelpList
        <small class="text-body-secondary text-opacity-75" > Helping Humans Help Humans </small> 
      </h1>

      <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-aFq/bzH65dt+w6FI2ooMVUpc+21e0SRygnTpmBvdBgSdnuTN7QbdgL+OapgHtvPp" crossorigin="anonymous">
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>
    <%= stylesheet_link_tag "application", "data-turbo-track": "reload" %>
    <%= javascript_importmap_tags %>
  </head>

  <body>
		<% flash.each do |type, msg| %>
			<h3><b><%= msg %></b></h3>
		<% end %>

    <nav class="navbar navbar-expand-lg navbar-light bg-light">
      <%= link_to "Home", root_path, class: "nav-link" %>
			<% if @user %>
				<%= link_to "Dashboard", dashboard_path, class: "nav-link" %>
				<%= link_to "Wishlist", wishlist_items_path, class: "nav-link" %>
			<% end %>
    </section>
    </nav>

 

    <section class="log-out">
      <% if @user %>
        <p><%= @user.email %></p>
        <%= button_to "Log Out", logout_path, method: :delete, data: { "turbo-method": :delete } %>
      <% end %>
    </section>
    </nav>
    
    <% flash.each do |name, msg| %>
      <%= content_tag :div, msg, class: name %>
    <% end %>

    <%= yield %>
  </body>
</html>
