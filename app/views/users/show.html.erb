<section>
  <div style="text-align: center;">
    <%if @user.username.nil?%>
      <p>Welcome to HelpList!</p>
    <%else%>
      <p>Welcome to HelpList, <%= @user.username %>!</p>
    <%end%>
    <% if @user.user_type == "donor" %>
      <%= render partial: 'donor_dashboard' %>
    <% else %>
      <%= render partial: 'recipient_dashboard' %>
    <% end %>
  </div>
</section>



